<div class="container col-md-3 col-md-offset-1">
  <%= image_tag(@book.avatar.url(:medium)) %>
</div>
<div class="container col-md">
  <p>
    <h2><%= @book.name %></h2>
  </p>
  <p>
    <strong>Codigo ISBN:</strong>
    <%= @book.barcode %>
  </p>
  <p>
    <strong>Precio:</strong>
    <%= moneda(@book.price) %>
  </p>
  <p>
    <strong>Autor:</strong>
    <%= @book.writer %>
  </p>

  <p>
    <strong>Editorial:</strong>
    <%= @book.editorial %>
  </p>

  <p>
    <strong>Genero:</strong>
    <%= @book.genre.name %>
  </p>

  <p>
    <strong>Stock:</strong>
    <%= @book.stock %> unidades.
  </p>
  <% if signed_in? && current_user.kind == "Admin" %>
    <%= link_to 'Editar', edit_book_path(@book) %> |
  <% end %>
  <%= link_to 'Volver', books_path %>
</div>
