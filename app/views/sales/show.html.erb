<h1 align="center">Ficha venta</h1>
<div class="container col-md-3 col-md-offset-3">
  <p>
    <strong>Vendedor/Usuario:</strong>
    <%= link_to @sale.user.name, @sale.user %>
  </p>

  <p>
    <strong>Código producto:</strong>
    <%= link_to @sale.product_barcode, producto(@sale.product_barcode) %>
  </p>

  <p>
    <strong>Cantidad:</strong>
    <%= numero(@sale.amount) %> unidades.
  </p>

  <p>
    <strong>Precio unitario:</strong>
    <%= moneda(@sale.price) %>
  </p>

  <p>
    <strong>Total venta:</strong>
    <%= moneda(@sale.price*@sale.amount) %>
  </p>

  <p>
    <strong>Fecha:</strong>
    <%= @sale.created_at.to_date.strftime("%d-%m-%Y") %>
  </p>

  <td><%= link_to 'Eliminar', @sale, method: :delete, data: { confirm: 'Al eliminar este registro, aumentará también el stock del producto.' } %></td> |
  <%= link_to 'Volver', sales_path %>
</div>
