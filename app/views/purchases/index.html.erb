<h1>Registro de compras</h1>
<% if !current_user.nil? && current_user.kind == 'Admin' %>
  <div class="col-md-2">
    <%= link_to 'Registrar compra', new_purchase_path, class: "btn btn-default btn-lg" %>
  </div>
<% end %>
  <div class="col-md-offset-8">
    <%= form_tag purchases_path, method: :get do %>
      <%= label_tag :kind, 'Filtro: ' %>
        <%= check_box_tag(:mes, 'yes') %>
        <%= label_tag("Mes") %>
        <%= select_month(Date.current, use_month_names: %w(Enero Febrero Marzo Abril Mayo Junio Julio Agosto Septiembre Octubre Noviembre Diciembre)) %>
        <%= select_year(Date.current, end_year: Date.current.year ) %>
      <%= submit_tag "Filtrar", name: nil, class: "btn btn-primary btn-md" %>
    <% end %>
  </div>
  <br><br>
  <% if @purchases.count == 0 %>
    <h4 align="center">No existen compras</h4>
  <% else %>
    <table class="table">
      <thead>
        <tr>
          <th>Código producto</th>
          <th>Rut proveedor</th>
          <th>Cantidad comprada</th>
          <th>Precio unitario</th>
          <th>Fecha (AAAA-MM-DD)</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @purchases.each do |purchase| %>
          <tr>
            <td><%= purchase.product_barcode %></td>
            <td><%= link_to purchase.provider_rut, Provider.find_by_rut(purchase.provider_rut) %></td>
            <td><%= purchase.amount %></td>
            <td>$ <%= purchase.price %></td>
            <td><%= purchase.created_at.to_date %></td>
            <td><%= link_to 'Mostrar', purchase %></td>
            <td><%= link_to 'Editar', edit_purchase_path(purchase) %></td>
            <td><%= link_to 'Eliminar', purchase, method: :delete, data: { confirm: 'Si elimina este registro, disminuirá también el stock del producto.' } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
    <% end %>
<br>
