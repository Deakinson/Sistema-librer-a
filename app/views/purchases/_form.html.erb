<%= bootstrap_form_for(@purchase) do |f| %>
  <% if @purchase.new_record? %>
    <div class="field">
      <%= f.number_field :product_barcode, label: "Código producto" %>
    </div>
    <div class="field">
      <%= f.number_field :provider_rut, label: "Rut proveedor" %>
    </div>
  <% else %>
    <div class="field">
      <%= f.number_field :product_barcode, label: "Código producto", readonly: true %>
    </div>
    <div class="field">
      <%= f.number_field :provider_rut, label: "Rut proveedor", readonly: true %>
    </div>
  <% end %>
  <div class="field">
    <%= f.number_field :amount, label: "Cantidad comprada" %>
  </div>
  <div class="field">
    <%= f.number_field :price, label: "Precio unitario", prepend: "$" %>
  </div>
  <div class="field">
    <%= f.date_select :created_at, label: "Fecha", start_year: Date.current.year - 1, end_year: Date.current.year, order: [:day,:month,:year] %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
