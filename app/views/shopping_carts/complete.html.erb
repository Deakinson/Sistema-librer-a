<h1> Gracias por adquirir nuestros productos :) </h1>

<h1> Carrito</h1>

<table class="table table-condensed">
  <thead>
    <tr>
      <th>Nombre</th>
      <th>Precio</th>
      <th>Acciones</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @shopping_cart.in_shopping_carts.each do |i_sh| product = i_sh.product %>
      <% if !product.nil? %>
      <tr>
          <td><%= product.name %></td>
          <td><%= '$' %><%= product.price %></td>
          <td><%= link_to 'Eliminar', @in_shopping_carts, method: :delete, data: { confirm: 'Â¿Seguro?' } %> </td>
      </tr>
      <% end %>
    <% end %>
  </tbody>
</table>
<p>
 <h3><strong>Total:</strong>  <%= '$' %><%= @shopping_cart.total %></h3> 
</p>

