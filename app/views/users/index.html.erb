<p id="notice"><%= notice %></p>
<h1>Usuarios</h1>
<%= link_to 'Crear usuario', new_user_path, class: "btn btn-default btn-lg" %><br>
<div class="col-md-offset-1 col-md-10">
  <table class="table">
    <thead>
      <tr>
        <th>Avatar</th>
        <th>Nombre</th>
        <th>Telefono</th>
        <th>Email</th>
        <th>Tipo de usuario</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @users.each do |user| %>
        <tr>
          <td><%= image_tag(user.avatar.url(:thumb)) %></td>
          <td><%= link_to user.name, user %></td>
          <td><%= user.phone %></td>
          <td><%= user.email %></td>
          <td><%= user.kind %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
