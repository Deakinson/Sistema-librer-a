<% if signed_in? && current_user.kind == "admin" %>
	<h1>Usuarios</h1>

	<table class="table">
	  <thead>
	    <tr>
	      <th>Avatar</th>
	      <th>Nombre</th>
	      <th>Telefono</th>
	      <th>Email</th>
	      <th>Tipo de usuario</th>
	      <th colspan="3"></th>
	    </tr>
	  </thead>

	  <tbody>
	    <% @users.each do |user| %>
	      <tr>
	  		<td><%= image_tag(user.avatar.url(:medium), :size => "80x80") %></td>
			<td><%= link_to user.name, user %></td>
	        <td><%= user.phone %></td>
	        <td><%= user.email %></td>
	        <td><%= user.kind %></td>
	      </tr>
	    <% end %>
	  </tbody>
	</table>
<% else %>
	<% store_location %>
	<% link_to sign_in%>
<% end %>

