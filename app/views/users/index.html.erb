<p id="notice"><%= notice %></p>
<h1>Usuarios</h1>
<%= link_to 'Nuevo usuario', new_user_path, class: "btn btn-default btn-lg" %>
<table class="table">
  <thead>
    <tr>
      <th>Nombre</th>
      <th>Contraseña</th>
      <th>Telefono</th>
      <th>Email</th>
      <th>Tipo de usuario</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.name %></td>
        <td><%= user.password %></td>
        <td><%= user.phone %></td>
        <td><%= user.email %></td>
        <td><%= user.kind %></td>
        <td><%= link_to 'Mostrar', user %></td>
        <td><%= link_to 'Editar', edit_user_path(user) %></td>
        <td><%= link_to 'Eliminar', user, method: :delete, data: { confirm: '¿Seguro?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
